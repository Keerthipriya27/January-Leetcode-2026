class Solution:
    def separateSquares(self, squares: List[List[int]]) -> float:
        total_area = 0
        low = float('inf')
        high = 0
        for x, y, l in squares:
            total_area += l * l
            low = min(low, y)
            high = max(high, y + l)
        target = total_area / 2.0
        def area_below(h):
            area = 0.0
            for x, y, l in squares:
                if h <= y:
                    continue
                elif h >= y + l:
                    area += l * l
                else:
                    area += (h - y) * l
            return area
        for _ in range(60):   # enough for 1e-5 precision
            mid = (low + high) / 2
            if area_below(mid) < target:
                low = mid
            else:
                high = mid
        return low
