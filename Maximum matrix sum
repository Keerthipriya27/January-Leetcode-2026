class Solution:
    def maxMatrixSum(self, matrix: List[List[int]]) -> int:
        total = 0
        negative_count = 0
        min_abs = float('inf')
        has_zero = False

        for row in matrix:
            for val in row:
                if val < 0:
                    negative_count += 1
                if val == 0:
                    has_zero = True
                total += abs(val)
                min_abs = min(min_abs, abs(val))

        if negative_count % 2 == 0 or has_zero:
            return total
        else:
            return total - 2 * min_abs
